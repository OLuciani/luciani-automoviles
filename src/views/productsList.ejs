            <section class="main-products-list">
                <% products.forEach(product => { %>
                    <div class="caja-products-list">
                        <a class="a-products-list" href="/products/detail/<%= product.id %> ">
                            <div>
                                <img src="/IMG/imgProducts/<%= product.image %> " alt="Foto">
                            </div>
                
                            <div>
                                <p><%= product.name %></p>
                            </div
                
                            <div>
                                <p>U$S <%= product.price %></p>
                            </div>
                        </a>
                    </div>
                <% }) %>
            </section>
