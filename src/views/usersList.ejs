    </head>
    <body>
        <header>
            <%- include("./partials/header") %> 
        </header>

        <main>
            <h1 class="h1-listado-usuarios">Listado de Usuarios</h1>
    
            <ol class="centrar-usuarios">
                <% users.forEach(user => { %>
                   
                        <li><%= user.firstName %> <%= user.lastName %> </li>
                        <span><%= user.email %></span>
                        <div>
                            <img src="/IMG/imgUsers/<%= user.avatar %> " alt="">
                        </div>
                
                    <br> <br> <br>
                <% }) %>
            </ol>
        </main>

        <footer>
            <%- include("./partials/footer") %>
        </footer>
    </body>

</html>
